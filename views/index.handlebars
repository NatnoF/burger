<div class="row">
    <div class="col-6">
        <h2>Burgers!</h2>
        <ul class="notDevoured">
        {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class="col-6">
        <h2>Devoured Burgers</h2>
        <ul class="devoured">
        {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2>Add a Burger</h2>
            </div>
            <div class="card-body">
                <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" class="form-control" id="ca" name="name">
                </div>

                <button class="btn btn-primary" type="submit">Add Burger</button>
                </form>
                </div>
            </div>
    </div>
</div>
